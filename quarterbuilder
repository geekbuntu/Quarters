#!/usr/bin/env python3

from quarters.builder.jobmanager import JobOverlord

import quarters.config

from multiprocessing import Manager

from quarters.builder.spout import start_builder_web

from quarters.builder.statuspoller import StatusPoller

if __name__ == '__main__':
    manager = Manager()
    job_states = manager.dict()

    config = quarters.config.read_config('conf/quarters.conf')
    print( config )

    jo = JobOverlord( job_states, config )
    jo.start()

    # keep master as list to reuse fetch status
    sp = StatusPoller( job_states, config )
    sp.start()

    # get it up!
    start_builder_web( job_states, config )
