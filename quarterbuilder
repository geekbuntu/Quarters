#!/usr/bin/env python3

from quarters.builder.jobmanager import JobOverlord, JobDescription

import quarters.config

if __name__ == '__main__':
    config = quarters.config.read_builder('conf/builder.conf')

    jo = JobOverlord( 5 )
    jo.start()

    pkgname = 'libuser'

    # add jobs
    for i in range( 1 ):
        # job description: ujid, pkgname, pkgsrc
        jd = JobDescription( str( i ), pkgname, 'https://aur.archlinux.org/packages/' + pkgname + '/' + pkgname + '.tar.gz' )
        jo.add_job( jd )
