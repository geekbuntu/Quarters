#!/usr/bin/env python3

from quarters.master.jobfetcher import JobFetcher

import quarters.config

from multiprocessing import Manager

from quarters.master.spout import start_master_web

from quarters.master.statuspoller import StatusPoller

if __name__ == '__main__':
    manager = Manager()
    job_states = manager.dict()

    pending_jobs = manager.Queue()

    config = quarters.config.read_config('conf/quarters.conf')
    print( config )

    jf = JobFetcher( job_states, pending_jobs, config )
    jf.start()

    # list of ips, ports of those ips
    sp = StatusPoller( job_states, config )
    sp.start()

    # get it up!
    start_master_web( job_states, pending_jobs, config )
